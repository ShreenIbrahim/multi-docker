{
	"AWSEBDockerrunVersion": 2,

	"containerDefinitions": [

		{
			"name": "client",
			"image": "shreenibrahim/multi-client",
			"hostname": "client",
			"essential": false
		},

		  {
                        "name": "server",
                        "image": "shreenibrahim/multi-server",
                        "hostname": "api",
                        "essential": false
                },

                  {
                        "name": "worker",
                        "image": "shreenibrahim/multi-worker",
                        "hostname": "worker",
                        "essential": false
                },

		     {
                        "name": "nginx",
                        "image": "shreenibrahim/multi-nginx",
                        "hostname": "nginx",
			"essential": true,
			"portMappings": [
				{ 
					"hostPort": 80,
					"containerPort": 80
				}
			],

			"links": ["client", "server"]


                }

	]



}
